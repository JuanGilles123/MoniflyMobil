<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.DashboardFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/expense_form_background"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_arrow_downward"
                        android:contentDescription="@string/expense_icon_description"
                        app:tint="@color/expense_red" />

                    <TextView
                        android:id="@+id/textViewAddExpenseTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Registrar Nuevo Gasto"
                        android:textColor="@color/text_primary"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="Controla tus gastos para un mejor presupuesto"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Form Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Campo Monto -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textFieldAmount"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Monto"
                        app:startIconDrawable="@drawable/ic_attach_money"
                        app:startIconTint="@color/expense_red"
                        app:boxStrokeColor="@color/expense_red"
                        app:hintTextColor="@color/expense_red">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo Descripci贸n -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textFieldDescription"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Descripci贸n (Opcional)"
                        app:startIconDrawable="@drawable/ic_description"
                        app:startIconTint="@color/expense_red">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapSentences" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo Categor铆a Mejorado -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Categor铆a"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupExpenseCategories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:singleSelection="true"
                        app:selectionRequired="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipFood"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comida"
                            android:textColor="@color/expense_chip_text_color_selector"
                            app:chipBackgroundColor="@color/expense_chip_background_color_selector"
                            app:chipStrokeColor="@color/expense_red" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipTransport"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transporte"
                            android:textColor="@color/expense_chip_text_color_selector"
                            app:chipBackgroundColor="@color/expense_chip_background_color_selector"
                            app:chipStrokeColor="@color/expense_red" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipShopping"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Compras"
                            android:textColor="@color/expense_chip_text_color_selector"
                            app:chipBackgroundColor="@color/expense_chip_background_color_selector"
                            app:chipStrokeColor="@color/expense_red" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipEntertainment"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Entretenimiento"
                            android:textColor="@color/expense_chip_text_color_selector"
                            app:chipBackgroundColor="@color/expense_chip_background_color_selector"
                            app:chipStrokeColor="@color/expense_red" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipBills"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Servicios"
                            android:textColor="@color/expense_chip_text_color_selector"
                            app:chipBackgroundColor="@color/expense_chip_background_color_selector"
                            app:chipStrokeColor="@color/expense_red" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipHealth"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salud"
                            android:textColor="@color/expense_chip_text_color_selector"
                            app:chipBackgroundColor="@color/expense_chip_background_color_selector"
                            app:chipStrokeColor="@color/expense_red" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipOtherExpense"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Otros"
                            android:textColor="@color/expense_chip_text_color_selector"
                            app:chipBackgroundColor="@color/expense_chip_background_color_selector"
                            app:chipStrokeColor="@color/expense_red" />

                    </com.google.android.material.chip.ChipGroup>

                    <!-- Cuenta/M茅todo de Pago -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="驴De qu茅 cuenta sali贸?"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupExpenseAccounts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:singleSelection="true"
                        app:selectionRequired="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCashExpense"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Efectivo"
                            android:textColor="@color/expense_chip_text_color_selector"
                            app:chipBackgroundColor="@color/expense_chip_background_color_selector"
                            app:chipStrokeColor="@color/expense_red" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipDebitCardExpense"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Cuenta Principal (D茅bito)"
                            android:textColor="@color/expense_chip_text_color_selector"
                            app:chipBackgroundColor="@color/expense_chip_background_color_selector"
                            app:chipStrokeColor="@color/expense_red" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipTransferExpense"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Transferencia"
                            android:textColor="@color/expense_chip_text_color_selector"
                            app:chipBackgroundColor="@color/expense_chip_background_color_selector"
                            app:chipStrokeColor="@color/expense_red" />

                    </com.google.android.material.chip.ChipGroup>

                    <!-- Campo Fecha -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textFieldDate"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Fecha"
                        app:startIconDrawable="@drawable/ic_calendar"
                        app:startIconTint="@color/expense_red"
                        app:boxStrokeColor="@color/expense_red"
                        app:hintTextColor="@color/expense_red">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:inputType="date" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botones de Acci贸n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonCancel"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Cancelar"
                    android:textColor="@color/text_secondary"
                    app:strokeColor="@color/text_secondary"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSaveExpense"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Guardar Gasto"
                    android:backgroundTint="@color/expense_red"
                    app:icon="@drawable/ic_arrow_downward"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    app:cornerRadius="12dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
