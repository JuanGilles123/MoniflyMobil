<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/card_background"
    app:strokeWidth="2dp"
    app:strokeColor="@color/primary_blue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Goal Category Icon mejorado -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/iconContainer"
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:cardCornerRadius="26dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/primary_blue_light"
            app:strokeWidth="2dp"
            app:strokeColor="@color/primary_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iconGoalCategory"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_goals"
                app:tint="@color/primary_blue"
                android:contentDescription="CategorÃ­a de meta" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Goal Content mejorado -->
        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/iconContainer"
            app:layout_constraintTop_toTopOf="@id/iconContainer"
            app:layout_constraintEnd_toStartOf="@+id/statusContainer">

            <!-- Goal Title -->
            <TextView
                android:id="@+id/textViewGoalTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:fontFamily="sans-serif-medium"
                tools:text="ðŸŽ¯ Comprar nuevo celular" />

            <!-- Goal Description -->
            <TextView
                android:id="@+id/textViewGoalDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                tools:text="Ahorrar para iPhone 15 Pro con 256GB" />

            <!-- Category mejorada -->
            <com.google.android.material.chip.Chip
                android:id="@+id/textViewGoalCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="TecnologÃ­a"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                app:chipBackgroundColor="@color/primary_blue_light"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="@color/primary_blue"
                app:chipMinHeight="28dp"
                app:chipStartPadding="8dp"
                app:chipEndPadding="8dp"
                app:ensureMinTouchTargetSize="false"
                tools:text="ðŸ’» TecnologÃ­a" />

        </LinearLayout>

        <!-- Status Container mejorado -->
        <LinearLayout
            android:id="@+id/statusContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iconContainer">

            <!-- Target Amount -->
            <TextView
                android:id="@+id/textViewTargetAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/expense_red"
                android:fontFamily="sans-serif-black"
                tools:text="ðŸ’° $3.500.000" />

            <!-- Status Chip mejorado -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipGoalStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="ðŸ”„ En progreso"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/debt_orange"
                app:chipBackgroundColor="@color/debt_orange_light"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="@color/debt_orange"
                app:chipMinHeight="28dp"
                app:chipStartPadding="8dp"
                app:chipEndPadding="8dp"
                app:ensureMinTouchTargetSize="false" />

        </LinearLayout>

        <!-- Progress Section mejorada -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/progressSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/progress_background"
            app:strokeWidth="1dp"
            app:strokeColor="@color/success_light"
            app:layout_constraintStart_toStartOf="@id/contentContainer"
            app:layout_constraintEnd_toEndOf="@id/statusContainer"
            app:layout_constraintTop_toBottomOf="@id/contentContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Progress Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Current Amount -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’š Ahorrado"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/success" />

                        <TextView
                            android:id="@+id/textViewCurrentAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/success"
                            android:fontFamily="sans-serif-black"
                            tools:text="$1.200.000" />

                    </LinearLayout>

                    <!-- Remaining Amount -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”´ Falta"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/debt_orange" />

                        <TextView
                            android:id="@+id/textViewRemainingAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/debt_orange"
                            android:fontFamily="sans-serif-black"
                            tools:text="$2.300.000" />

                    </LinearLayout>

                    <!-- Progress Percentage -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“Š Progreso"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_blue" />

                        <TextView
                            android:id="@+id/textViewProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_blue"
                            android:fontFamily="sans-serif-black"
                            tools:text="34%" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Progress Bar mejorada -->
                <ProgressBar
                    android:id="@+id/progressBarGoal"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:progress="34"
                    android:progressTint="@color/success"
                    android:progressBackgroundTint="@color/progress_background_tint"
                    android:max="100"
                    tools:progress="34" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bottom Section mejorada -->
        <LinearLayout
            android:id="@+id/bottomSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/contentContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressSection">

            <!-- Deadline mejorado -->
            <TextView
                android:id="@+id/textViewDeadline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:drawablePadding="6dp"
                app:drawableStartCompat="@drawable/ic_calendar"
                app:drawableTint="@color/debt_orange"
                tools:text="ðŸ“… Fecha lÃ­mite: 31 Dic 2024" />

            <!-- Actions mejoradas -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Toggle Complete Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonToggleComplete"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="âœ… Completar"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/success"
                    app:backgroundTint="@color/success_light"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/success"
                    android:layout_marginEnd="6dp"
                    android:minWidth="0dp"
                    android:paddingHorizontal="12dp" />

                <!-- Edit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonEditGoal"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:icon="@drawable/ic_edit"
                    app:iconTint="@color/primary_blue"
                    app:iconSize="18dp"
                    app:backgroundTint="@color/primary_blue_light"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/primary_blue"
                    android:layout_marginEnd="6dp"
                    android:contentDescription="Editar meta" />

                <!-- Delete Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonDeleteGoal"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:icon="@drawable/ic_delete"
                    app:iconTint="@color/delete_red"
                    app:iconSize="18dp"
                    app:backgroundTint="@color/delete_red_light"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/delete_red"
                    android:contentDescription="Eliminar meta" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>