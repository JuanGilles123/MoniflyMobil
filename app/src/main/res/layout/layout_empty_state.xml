<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="@color/background">

    <ImageView
        android:id="@+id/emptyStateImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_wallet_empty"
        android:alpha="0.7"
        app:tint="@color/monifly_primary_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:contentDescription="Estado vacÃ­o" />

    <TextView
        android:id="@+id/emptyStateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Â¡Comienza tu viaje financiero!"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/emptyStateImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/emptyStateMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Registra tu primer ingreso o gasto para comenzar a organizar tus finanzas y volar ligero ðŸš€"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="@color/empty_state_text"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/emptyStateTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="280dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/emptyStateMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAddIncomeEmpty"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="AÃ±adir Ingreso"
            android:backgroundTint="@color/income_green"
            app:icon="@drawable/ic_arrow_upward"
            app:iconGravity="textStart"
            app:iconTint="@color/white"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAddExpenseEmpty"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="AÃ±adir Gasto"
            android:textColor="@color/expense_red"
            app:icon="@drawable/ic_arrow_downward"
            app:iconGravity="textStart"
            app:iconTint="@color/expense_red"
            app:strokeColor="@color/expense_red"
            app:cornerRadius="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>