<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/card_background"
    app:strokeWidth="1dp"
    app:strokeColor="@color/debt_card_stroke">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Goal Category Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/iconContainer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/debt_icon_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iconGoalCategory"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_goals"
                app:tint="@color/monifly_primary"
                android:contentDescription="Categoría de meta" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Goal Content -->
        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/iconContainer"
            app:layout_constraintTop_toTopOf="@id/iconContainer"
            app:layout_constraintEnd_toStartOf="@+id/statusContainer">

            <!-- Goal Title -->
            <TextView
                android:id="@+id/textViewGoalTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                tools:text="Comprar nuevo celular" />

            <!-- Goal Description -->
            <TextView
                android:id="@+id/textViewGoalDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Ahorrar para iPhone 15 Pro" />

            <!-- Category -->
            <TextView
                android:id="@+id/textViewGoalCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/monifly_primary"
                android:background="@drawable/category_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                tools:text="Tecnología" />

        </LinearLayout>

        <!-- Status Container -->
        <LinearLayout
            android:id="@+id/statusContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iconContainer">

            <!-- Target Amount -->
            <TextView
                android:id="@+id/textViewTargetAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/expense_red"
                android:fontFamily="sans-serif-medium"
                tools:text="$3.500.000" />

            <!-- Status Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipGoalStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="En progreso"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/debt_chip_text_color"
                app:chipBackgroundColor="@color/debt_chip_background_color"
                app:chipStrokeWidth="0dp"
                app:chipMinHeight="24dp"
                app:chipStartPadding="8dp"
                app:chipEndPadding="8dp"
                app:ensureMinTouchTargetSize="false" />

        </LinearLayout>

        <!-- Progress Section -->
        <LinearLayout
            android:id="@+id/progressSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@id/contentContainer"
            app:layout_constraintEnd_toEndOf="@id/statusContainer"
            app:layout_constraintTop_toBottomOf="@id/contentContainer">

            <!-- Progress Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- Current Amount -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ahorrado"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textViewCurrentAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/income_green"
                        tools:text="$1.200.000" />

                </LinearLayout>

                <!-- Remaining Amount -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Falta"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textViewRemainingAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/debt_orange"
                        tools:text="$2.300.000" />

                </LinearLayout>

                <!-- Progress Percentage -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progreso"
                        android:textSize="11sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textViewProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/monifly_primary"
                        tools:text="34%" />

                </LinearLayout>

            </LinearLayout>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBarGoal"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="34"
                android:progressTint="@color/monifly_primary"
                android:progressBackgroundTint="@color/text_tertiary"
                android:max="100"
                tools:progress="34" />

        </LinearLayout>

        <!-- Bottom Section -->
        <LinearLayout
            android:id="@+id/bottomSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/contentContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressSection">

            <!-- Deadline -->
            <TextView
                android:id="@+id/textViewDeadline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:textColor="@color/text_tertiary"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_calendar"
                app:drawableTint="@color/text_tertiary"
                tools:text="Fecha límite: 31 Dic 2024" />

            <!-- Actions -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Toggle Complete Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonToggleComplete"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Completar"
                    android:textSize="11sp"
                    android:textColor="@color/monifly_primary"
                    android:layout_marginEnd="4dp"
                    android:minWidth="0dp"
                    android:paddingHorizontal="12dp" />

                <!-- Edit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonEditGoal"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:icon="@drawable/ic_edit"
                    app:iconTint="@color/monifly_primary"
                    app:iconSize="16dp"
                    app:backgroundTint="@android:color/transparent"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="Editar meta" />

                <!-- Delete Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonDeleteGoal"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:icon="@drawable/ic_delete"
                    app:iconTint="@color/delete_red"
                    app:iconSize="16dp"
                    app:backgroundTint="@android:color/transparent"
                    android:contentDescription="Eliminar meta" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>