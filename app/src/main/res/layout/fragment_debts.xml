<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".DebtsFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DashboardVM"
        android:visibility="gone" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshDebts"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header con título -->
                <TextView
                    android:id="@+id/textViewDebtsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mis Deudas"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginTop="8dp" />

                <!-- Card de resumen con borde -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/card_background"
                    app:strokeColor="@color/monifly_primary"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Me Deben -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_upward"
                                app:tint="@color/income_green"
                                android:layout_marginEnd="8dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Me Deben"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(Actualmente)"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_marginTop="2dp" />

                                <TextView
                                    android:id="@+id/textViewTotalOwedToMeDebts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$0.00"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/income_green" />

                            </LinearLayout>
                        </LinearLayout>

                        <!-- Yo Debo -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_downward"
                                app:tint="@color/expense_red"
                                android:layout_marginEnd="8dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yo Debo"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(Actualmente)"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_marginTop="2dp" />

                                <TextView
                                    android:id="@+id/textViewTotalOwedByMeDebts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$0.00"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/expense_red" />

                            </LinearLayout>
                        </LinearLayout>

                        <!-- Balance Neto en Deudas -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_balance"
                                app:tint="@color/debt_orange"
                                android:layout_marginEnd="8dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Balance en Deudas"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(Todas las deudas: Pagas/No pagas)"
                                    android:textSize="10sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_marginTop="2dp" />

                                <TextView
                                    android:id="@+id/textViewNetBalanceDebts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$0.00"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/debt_orange" />

                            </LinearLayout>
                        </LinearLayout>

                        <!-- Separador -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/balance_blue"
                            android:layout_marginVertical="12dp"
                            android:alpha="0.5" />

                        <!-- Dinero Disponible -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_account_balance_wallet"
                                app:tint="@color/balance_blue"
                                android:layout_marginEnd="8dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/debts_available_money"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/debts_available_money_desc"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_marginTop="2dp" />

                                <TextView
                                    android:id="@+id/textViewTransactionBalance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$0.00"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/balance_blue"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>
                        </LinearLayout>

                        <!-- Patrimonio Total -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/bg_balance_total"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_account_balance_wallet"
                                app:tint="@color/text_primary"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/debts_total_wealth"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/debts_total_wealth_desc"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_marginTop="2dp" />

                                <TextView
                                    android:id="@+id/textViewGrandTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$0.00"
                                    android:textSize="28sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tabs para las secciones -->
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayoutDebts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="8dp"
                    app:tabMode="fixed"
                    app:tabGravity="fill"
                    app:tabSelectedTextColor="@color/monifly_primary"
                    app:tabTextColor="@color/text_secondary"
                    app:tabIndicatorColor="@color/monifly_primary"
                    app:tabRippleColor="@color/monifly_primary_light">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yo Debo" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Me Deben" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pagadas" />

                </com.google.android.material.tabs.TabLayout>

                <!-- ViewPager para las listas -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerDebts"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- FAB Mejorado -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddDebt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Nueva Deuda"
        android:textColor="@color/white"
        app:icon="@drawable/ic_add"
        app:iconTint="@color/white"
        app:backgroundTint="@color/monifly_primary"
        app:cornerRadius="28dp"
        android:contentDescription="Añadir nueva deuda" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>