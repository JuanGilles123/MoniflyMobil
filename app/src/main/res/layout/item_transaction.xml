<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transactionCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Fila principal con descripción y monto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Ícono de flecha para tipo de transacción -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/iconContainer"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/iconType"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_upward"
                    android:contentDescription="Tipo de transacción" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Descripción de la transacción -->
            <TextView
                android:id="@+id/textDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginEnd="16dp"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Mom" />

            <!-- Monto de la transacción -->
            <TextView
                android:id="@+id/textAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                tools:text="+ $50.000,00" />

        </LinearLayout>

        <!-- Fila con categoría, fecha y botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Categoría -->
            <TextView
                android:id="@+id/textCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginEnd="16dp"
                tools:text="Ingreso" />

            <!-- Fecha -->
            <TextView
                android:id="@+id/textTransactionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="16 sept" />

            <!-- Espaciador -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Botón editar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEditTransaction"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                app:icon="@drawable/ic_edit"
                app:iconTint="@color/monifly_primary"
                app:iconSize="18dp"
                app:backgroundTint="@android:color/transparent"
                android:contentDescription="Editar transacción" />

            <!-- Botón eliminar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDeleteTransaction"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:icon="@drawable/ic_delete"
                app:iconTint="@color/expense_red"
                app:iconSize="18dp"
                app:backgroundTint="@android:color/transparent"
                android:contentDescription="Eliminar transacción" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>