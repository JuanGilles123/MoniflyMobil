<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Skeleton del container del icono -->
        <View
            android:id="@+id/skeletonIconContainer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/skeleton_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Skeleton de la descripción -->
        <View
            android:id="@+id/skeletonDescription"
            android:layout_width="140dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/skeleton_shape"
            app:layout_constraintStart_toEndOf="@id/skeletonIconContainer"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Skeleton de la categoría -->
        <View
            android:id="@+id/skeletonCategory"
            android:layout_width="90dp"
            android:layout_height="14dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/skeleton_shape"
            app:layout_constraintStart_toStartOf="@id/skeletonDescription"
            app:layout_constraintTop_toBottomOf="@id/skeletonDescription" />

        <!-- Skeleton de la fecha -->
        <View
            android:id="@+id/skeletonDate"
            android:layout_width="60dp"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/skeleton_shape"
            app:layout_constraintStart_toStartOf="@id/skeletonCategory"
            app:layout_constraintTop_toBottomOf="@id/skeletonCategory" />

        <!-- Skeleton del monto -->
        <View
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/skeleton_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/skeletonDeleteButton"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Skeleton del botón eliminar -->
        <View
            android:id="@+id/skeletonDeleteButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/skeleton_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>