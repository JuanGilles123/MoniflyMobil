<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.GoalsFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshGoals"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <TextView
                    android:id="@+id/textViewGoalsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mis Metas"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginTop="8dp" />

                <!-- Stats Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/card_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Goals Summary -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <!-- Total Goals -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Metas"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:id="@+id/textViewTotalGoals"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/monifly_primary"
                                    tools:text="4" />

                            </LinearLayout>

                            <!-- Completed Goals -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Completadas"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:id="@+id/textViewCompletedGoals"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/income_green"
                                    tools:text="1" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Amounts Summary -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <!-- Total Target -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Meta Total"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:id="@+id/textViewTotalTarget"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$0"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/expense_red"
                                    tools:text="$26.000.000" />

                            </LinearLayout>

                            <!-- Total Saved -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ahorrado"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:id="@+id/textViewTotalSaved"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$0"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/income_green"
                                    tools:text="$16.500.000" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Overall Progress -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Progreso General"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:id="@+id/textViewOverallProgress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0%"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/monifly_primary"
                                    tools:text="63%" />

                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/progressBarOverall"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="8dp"
                                android:progress="0"
                                android:progressTint="@color/monifly_primary"
                                android:progressBackgroundTint="@color/text_tertiary"
                                android:max="100"
                                tools:progress="63" />

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Goals List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewGoals"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:paddingBottom="80dp"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_goal" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Nueva Meta"
        android:textColor="@color/white"
        app:icon="@drawable/ic_add"
        app:iconTint="@color/white"
        app:backgroundTint="@color/monifly_primary"
        app:cornerRadius="28dp"
        android:contentDescription="AÃ±adir nueva meta" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>