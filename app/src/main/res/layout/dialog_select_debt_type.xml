<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="20dp"
    android:paddingBottom="8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_option_i_owe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="?attr/colorPrimaryVariant"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icon_i_owe"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_arrow_downward" 
                app:tint="?attr/colorPrimary"
                android:contentDescription="Opción: Yo Debo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yo Debo\n(Registrar un pago pendiente)"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:lineSpacingMultiplier="1.2"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_option_they_owe_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="?attr/colorPrimaryVariant"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icon_they_owe_me"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_arrow_upward" 
                app:tint="?attr/colorError" 
                android:contentDescription="Opción: Me Deben" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Me Deben\n(Registrar un cobro pendiente)"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:lineSpacingMultiplier="1.2"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>